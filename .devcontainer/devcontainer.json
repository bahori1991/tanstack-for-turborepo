{
  "name": "node-turborepo",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "remoteUser": "appuser",
  "workspaceFolder": "/home/appuser/workspace",
  "workspaceMount": "source=${localWorkspaceFolder},target=/home/appuser/workspace,type=bind",
  "mounts": [
    "source=${localEnv:HOME}/.bashrc,target=/home/appuser/.bashrc,type=bind,readonly=true",
    "source=${localEnv:HOME}/.ssh,target=/home/appuser/.ssh,type=bind"
  ],
  "features": {
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/github-cli:1": {}
  },
  "containerEnv": {
    "NODE_ENV": "development",
    "DISABLE_ESLINT_PLUGIN": "true",
    "TZ": "Asia/Tokyo"
  },
  "forwardPorts": [3000, 8080],
  "portsAttributes": {
    "3000": {
      "label": "Frontend",
      "onAutoForward": "notify"
    },
    "8080": {
      "label": "Backend",
      "onAutoForward": "notify"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "christian-kohler.npm-intellisense",
        "christian-kohler.path-intellisense",
        "bradlc.vscode-tailwindcss",
        "biomejs.biome"
      ],
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash",
        "terminal.integrated.shell.linux": "/bin/bash",
        "security.workspace.trust.enabled": true
      }
    }
  },
  "postStartCommand": "echo 'Dev container started successfully!'",
  "shutdownAction": "stopContainer"
}