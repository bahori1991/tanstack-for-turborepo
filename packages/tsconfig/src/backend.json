{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "backend",
  "extends": "./base.json",
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "moduleDetection": "force",
    "lib": ["ES2022"],
    "types": ["node"],
    "allowImportingTsExtensions": false,
    "noEmit": false,
    "emitDeclarationOnly": false
  }
}
